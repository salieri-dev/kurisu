{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ruff: Format and Fix Project",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\scripts\\format_project.ps1"
            ],
            "problemMatcher": [
                "$ruff"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "group": "build"
        }
    ]
}